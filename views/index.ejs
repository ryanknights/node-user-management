<!DOCTYPE html>
<html lang="en">

<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container">

        <div class="jumbotron text-center">
            <h1>Node User Management</h1>

			<% if (typeof successMessage !== 'undefined' && successMessage.length > 0) { %>
				<div class="alert alert-success">
					<%- successMessage %>
				</div>
	    	<% } %>

            <% if (typeof errorMessage !== 'undefined' && errorMessage.length > 0) { %>
                <div class="alert alert-danger">
                    <%- errorMessage %>
                </div>
            <% } %>

            <% if (typeof users !== 'undefined') { %>

                <% if (users.length > 0) { %>
                    <ul class="list-unstyled">
                        <% users.forEach(function (user) { %>
                            <li>
                                <a href="/user/<%=user._id%>">
                                    <%=user.username%>
                                </a>
                            </li>
                        <% }); %>
                    </ul>
                <% } else { %>
                    <p>No Current Users</p>
                <% } %>
            <% } %>

            <a href="/newuser" class="btn btn-primary">New User</a>          
        </div>

    </div>
</body>

</html>